<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BLE_Hockey.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:BLE_Hockey.Pages"
    Shell.FlyoutBehavior="Flyout">

    <FlyoutItem Title="Menu">
        <ShellContent ContentTemplate="{DataTemplate pages:MenuPage}"
                      Route="MenuPage" >
        </ShellContent>
    </FlyoutItem>
    <FlyoutItem Title="Hledání zařízení">
        <ShellContent ContentTemplate="{DataTemplate pages:TargetFinderPage}"
                      Route="TargetFinderPage" >
        </ShellContent>
    </FlyoutItem>
    <FlyoutItem Title="Připojení na zařízení">
        <ShellContent ContentTemplate="{DataTemplate pages:ConnectPage}"
                      Route="ConnectPage" >
        </ShellContent>
    </FlyoutItem>
    <FlyoutItem Title="Hra">
        <ShellContent ContentTemplate="{DataTemplate pages:GamePage}"
                      Route="GamePage" >
        </ShellContent>
    </FlyoutItem>

</Shell>
