<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BLE_Hockey.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:BLE_Hockey.Pages"
    Shell.FlyoutBehavior="Flyout">

    
    
    
    <ShellContent
        ContentTemplate="{DataTemplate pages:MenuPage}"
        Route="MenuPage">
    </ShellContent>
    <FlyoutItem Title="Scan and select device">
        <ShellContent ContentTemplate="{DataTemplate pages:MainPage}"
                      Route="HomePage" >
        </ShellContent>
    </FlyoutItem>
    <FlyoutItem Title="ConnectPage">
        <ShellContent ContentTemplate="{DataTemplate pages:ConnectPage}"
                      Route="ConnectPage" >
        </ShellContent>
    </FlyoutItem>

</Shell>
